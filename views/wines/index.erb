<h2>Wine List</h2>

<form action="/wines/new">
  <button>Add a wine!</button>
</form>

<% @wines.each do |wine| %>
  <ul>
    <li>
      <a href="/wines/<%= wine.id %>">
        <%= wine.name %> </br>
      </a>
      <%= wine.year %> </br>
      <%= wine.vineyard %> </br>
      <%= wine.rating %> </br>
      <%= wine.description %> </br>

    </li>
  </ul>

<% end %>
